<div class="container">
<h1>Enter your Information</h1>

<% if @subscriber.errors.any? %>
<ul>
<% @subscriber.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for @subscriber do |form| %>
  <div class="form-group">
    <p>
    <%= form.text_field :first_name, placeholder: "First Name" %>
    </p>
    <p>
    <%= form.text_field :last_name, placeholder: "Last Name" %>
    </p>
    <p>
     <%= form.text_field :email, placeholder: "Email" %>
    </p>
    <p>
    <%= form.text_field :phone_number, placeholder: "Phone" %>
    </p>
  </div>
  <%= form.submit "Sign Up", class: "btn btn-primary" %>
<% end %>
</div>
